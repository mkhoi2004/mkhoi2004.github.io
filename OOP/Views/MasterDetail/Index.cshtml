@model IEnumerable<OOP.Models.Reservation>

@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Reservation Index</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        /* Reset các giá trị mặc định của các thẻ HTML */
        *,
        *::before,
        *::after {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        /* Thiết lập font và margin cho trang */
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        /* Thiết lập style cho tiêu đề */
        h2 {
            color: #333;
            margin-bottom: 20px;
            text-align: center; /* Căn giữa tiêu đề */
            text-transform: uppercase; /* Chuyển đổi văn bản thành chữ in hoa */
            font-size: 24px; /* Kích thước chữ tiêu đề */
            border-bottom: 2px solid transparent; /* Đường viền dưới mặc định */
            padding-bottom: 10px; /* Khoảng cách dưới của đường viền dưới */
            transition: color 0.3s ease; /* Hiệu ứng chuyển đổi màu sắc của đường viền */
        }

            h2:hover {
                color: #99ccff; /* Màu sắc của đường viền khi hover */
            }

        /* Thiết lập style cho nút */
        .btn {
            display: inline-block;
            padding: 8px 12px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s;
            margin-bottom: 20px;
        }

            .btn:hover {
                background-color: #0056b3;
            }

        /* Thiết lập style cho bảng */
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

            .table th,
            .table td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
            }

            .table th {
                background-color: #f2f2f2;
                color: #333;
                text-transform: uppercase;
            }

            .table tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            .table tr:hover {
                background-color: #f1f1f1;
            }

        .action-links {
            display: flex;
            gap: 10px;
        }

            .action-links a {
                background-color: #007bff;
                color: #fff;
                padding: 5px 10px;
                text-decoration: none;
                border-radius: 4px;
                transition: background-color 0.3s;
            }

                .action-links a:hover {
                    background-color: #0056b3;
                }
    </style>
</head>
<body>
    <h2>Reservation List</h2>

    <p>
        <a href="@Url.Action("Create")" class="btn">Create New</a>
    </p>
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.reservation_id)</th>
            <th>@Html.DisplayNameFor(model => model.customer_name)</th>
            <th>@Html.DisplayNameFor(model => model.email)</th>
            <th>@Html.DisplayNameFor(model => model.reservation_date)</th>
            <th>@Html.DisplayNameFor(model => model.reservation_time)</th>
            <th>@Html.DisplayNameFor(model => model.person)</th>
            <th>@Html.DisplayNameFor(model => model.Menu.menu_id)</th>
            <th>@Html.DisplayNameFor(model => model.Menu.name)</th>
            <th>@Html.DisplayNameFor(model => model.Menu.price)</th>

            <th>Action</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.reservation_id)</td>
                <td>@Html.DisplayFor(modelItem => item.customer_name)</td>
                <td>@Html.DisplayFor(modelItem => item.email)</td>
                <td>@Html.DisplayFor(modelItem => item.reservation_date)</td>
                <td>@Html.DisplayFor(modelItem => item.reservation_time)</td>
                <td>@Html.DisplayFor(modelItem => item.person)</td>
                <td>@Html.DisplayFor(modelItem => item.Menu.menu_id)</td>
                <td>@Html.DisplayFor(modelItem => item.Menu.name)</td>
                <td>@Html.DisplayFor(modelItem => item.Menu.price)</td>
                <td class="action-links">
                    @Html.ActionLink("Edit", "Edit", new { id = item.reservation_id })
                    @Html.ActionLink("Delete", "Delete", new { id = item.reservation_id })
                </td>
            </tr>
        }
    </table>
</body>
</html>
