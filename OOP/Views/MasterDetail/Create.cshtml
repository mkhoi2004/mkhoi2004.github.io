@model OOP.Models.Reservation

@{
    ViewBag.Title = "Create";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Create New Reservation</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        h4 {
            font-size: 4vh;
            margin-top: 2vh;
            transition: font-size 0.3s ease;
            text-align: center;
        }

            h4:hover {
                font-size: 5vh;
            }

        .form-horizontal {
            width: 90%;
            max-width: 400px;
            margin: 0 auto;
            padding: 3vh;
            border: 0.1em solid #ccc;
            border-radius: 1vh;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 3vh;
        }

        .control-label {
            font-size: 2.5vh;
            font-weight: bold;
            display: block;
            margin-bottom: 1vh;
        }

        .form-control {
            font-size: 2.5vh;
            width: 100%;
            padding: 1.2vh;
            border: 0.1em solid #ccc;
            border-radius: 1vh;
            box-sizing: border-box;
        }

        .btn {
            font-size: 2.5vh;
            display: inline-block;
            padding: 1.5vh 2.5vh;
            border: none;
            border-radius: 1vh;
            background-color: #007bff;
            color: #fff;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .btn-secondary {
            background-color: #6c757d;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f8f9fa;
            padding: 1vh;
            box-sizing: border-box;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Reservation</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.EditorFor(model => model.reservation_id, new { htmlAttributes = new { @class = "form-control", placeholder = "Reservation ID" } })
                @Html.ValidationMessageFor(model => model.reservation_id, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.EditorFor(model => model.customer_name, new { htmlAttributes = new { @class = "form-control", placeholder = "Customer Name" } })
                @Html.ValidationMessageFor(model => model.customer_name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="date" id="date" data-target-input="nearest">
                    @Html.EditorFor(model => model.reservation_date, new { htmlAttributes = new { @class = "form-control datetimepicker-input", placeholder = "Date", data_target = "#date", data_toggle = "datetimepicker" } })
                    @Html.ValidationMessageFor(model => model.reservation_date, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.EditorFor(model => model.reservation_time, new { htmlAttributes = new { @class = "form-control", placeholder = "Time" } })
                @Html.ValidationMessageFor(model => model.reservation_time, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.EditorFor(model => model.person, new { htmlAttributes = new { @class = "form-control", placeholder = "Person", Value = "1", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.person, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.menu_id, "Menu ID", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("menu_id", ViewBag.MenuIdList as SelectList, "Select Menu ID", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.menu_id, "", new { @class = "text-danger" })
            </div>

           

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })

            </div>
        </div>
    }

    
</body>
</html>
