@model OOP.Models.Contact

@{
    ViewBag.Title = "Create";
}

<head>
    <title>Create New Product</title>

    <style>
        h4 {
            font-size: 5vh; /* Độ lớn của phần tử h4, sử dụng đơn vị vh */
            margin-top: 5vh; /* Khoảng cách từ phần tử trên cùng, sử dụng đơn vị vh */
            transition: font-size 0.3s ease; /* Hiệu ứng chuyển đổi kích thước font */
            text-align: center;
        }

            h4:hover {
                font-size: 8vh; /* Độ lớn của phần tử h4 khi di chuột qua, sử dụng đơn vị vh */
            }

        .form-container {
            width: 40vh; /* Sử dụng % cho kích thước tối đa */
            margin: 0 auto;
            padding: 7vh; /* Kích thước padding, sử dụng đơn vị vh */
            border: 0.1em solid #ccc;
            border-radius: 7vh; /* Độ cong viền, sử dụng đơn vị vh */
            background-color: #fff;
        }

        .form-group {
            margin-bottom: 5vh; /* Khoảng cách giữa các nhóm form, sử dụng đơn vị vh */
        }

        .control-label {
            font-size: 3vh;
            font-weight: bold;
        }

        .form-control {
            font-size: 3vh;
            width: 100%;
            padding: 2vh; /* Kích thước padding, sử dụng đơn vị vh */
            border: 0.1em solid #ccc;
            border-radius: 5vh; /* Độ cong viền, sử dụng đơn vị vh */
            box-sizing: border-box;
        }

        .btn {
            font-size: 2vh;
            display: inline-block;
            padding: 1vh 2vh; /* Kích thước padding của nút, sử dụng đơn vị vh */
            border: none;
            border-radius: 5vh; /* Độ cong viền, sử dụng đơn vị vh */
            background-color: #007bff;
            color: #fff;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .btn-secondary {
            font-size: 2vh;
            background-color: #007bff;
        }

        .btn:hover {
            background-color: #5a6268;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

        html, body {
            margin: 0;
            display: flex;
            justify-content: center; /* Căn giữa theo chiều ngang */
            align-items: center; /* Căn giữa theo chiều dọc */
        }
    </style>
</head>
<body>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-container">
        <h4>Contact</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.contact_id, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.contact_id, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.contact_id, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.address, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.phone, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" }) <!-- ActionLink được đặt trong form -->
        </div>
    </div>
    }
</body>